<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fitsSystemWindows="false">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/surface_dark"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/text_main" />

        <TextView
            android:id="@+id/chatTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Chat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_main" />
            
        <TextView
            android:id="@+id/statusIndicator"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Offline"
             android:textSize="12sp"
             android:textColor="@color/secondary"
             android:layout_marginEnd="8dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            android:visibility="gone" />

        <!-- Loading State -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/accent"/>
            
            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting..."
                android:textColor="@color/secondary"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- QR Code Container -->
        <LinearLayout
            android:id="@+id/qrContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan to Connect"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                android:layout_marginBottom="24dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                
                <ImageView
                    android:id="@+id/qrCodeImage"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generating Secure Key..."
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:textAlignment="center"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </FrameLayout>
    
    <!-- Bottom Bar (Input + Icons) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface_dark"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <!-- Input Row -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

             <!-- Attachments Row (Moved to bottom left of input) -->
             <ImageView
                android:id="@+id/btnShareFile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_attach_file"
                app:tint="@color/secondary"
                android:padding="6dp"
                android:layout_marginEnd="4dp"/>
    
            <ImageView
                android:id="@+id/btnCamera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_camera_alt"
                app:tint="@color/secondary" 
                android:padding="6dp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_field"
                android:hint="Message..."
                android:textColor="@color/text_main"
                android:textColorHint="@color/secondary"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:maxLines="4"
                android:inputType="textCapSentences|textMultiLine" />

            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/accent"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>